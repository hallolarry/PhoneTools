<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">
        <item name="textColorDefault">@color/dk_text_default</item>
        <item name="backgroundWindow">@drawable/dk_bg_window</item>
        <item name="backgroundFragment">@null</item>
        <item name="startLine">@drawable/dk_line_arrow</item>
        <item name="backgroundButton">@drawable/dk_button_bg</item>
        <item name="textColorButton">@color/dk_text_button</item>
        <item name="backgroundTopBar">@drawable/lt_bg_title</item>
        <item name="textColorTopBarTitle">@color/dk_text_top_bar_title</item>
        <item name="backgroundGridItem">@color/dk_bg_grid_item</item>
        <item name="backgroundListGroup">@color/dk_bg_list_group</item>
        <item name="backgroundListChild">@color/dk_bg_list_child</item>
        <item name="backgroundPagerTitle">@color/dk_bg_pager_title</item>
        <item name="textColorPagerTitle">@color/dk_text_pager_title</item>
        <item name="iconBack">@drawable/dk_arrow_left</item>
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="textColorDefault">@color/lt_text_default</item>
        <item name="backgroundWindow">@color/lt_bg_window</item>
        <item name="backgroundFragment">@null</item>
        <item name="startLine">@drawable/lt_line_arrow</item>
        <item name="backgroundButton">@drawable/lt_button_default</item>
        <item name="textColorButton">@color/lt_text_button</item>
        <item name="backgroundTopBar">@drawable/lt_bg_title</item>
        <item name="textColorTopBarTitle">@color/lt_text_top_bar_title</item>
        <item name="backgroundGridItem">@color/lt_bg_grid_item</item>
        <item name="backgroundListGroup">@color/lt_bg_list_group</item>
        <item name="backgroundListChild">@color/lt_bg_list_child</item>
        <item name="backgroundPagerTitle">@color/lt_pager_title</item>
        <item name="textColorPagerTitle">@color/lt_text_pager_title</item>
        <item name="iconBack">@drawable/lt_arrow_left</item>
    </style>

    <style name="ClassicTheme" parent="AppTheme">
        <item name="textColorDefault">@color/cl_text_default</item>
        <item name="backgroundWindow">@drawable/cl_bg_window</item>
        <item name="backgroundFragment">@null</item>
        <item name="startLine">@drawable/dk_line_arrow</item>
        <item name="backgroundButton">@drawable/cl_button_bg</item>
        <item name="textColorButton">@color/cl_text_button</item>
        <item name="backgroundTopBar">@drawable/cl_bg_title</item>
        <item name="textColorTopBarTitle">@color/cl_text_top_bar_title</item>
        <item name="backgroundGridItem">@color/cl_bg_grid_item</item>
        <item name="backgroundListGroup">@color/cl_bg_list_group</item>
        <item name="backgroundListChild">@color/cl_bg_list_child</item>
        <item name="backgroundPagerTitle">@color/lt_pager_title</item>
        <item name="textColorPagerTitle">@color/cl_text_pager_title</item>
        <item name="iconBack">@drawable/cl_arrow_left</item>
    </style>

    <style name="Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="BottomContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/backgroundButton</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">?attr/textColorButton</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.Bottom">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="Button.Start">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/lt_text_top_bar_title</item>
        <item name="android:background">@drawable/lt_button_start</item>
        <item name="android:text">@string/start</item>
    </style>

    <style name="Ball">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/button_ball</item>
        <item name="android:textColor">@color/lt_text_top_bar_title</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Icon.Left">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Icon.Left.Top">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:onClick">back</item>
        <item name="android:src">?attr/iconBack</item>
    </style>

    <style name="Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Spinner.Query">
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:listSelector">@null</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:drawSelectorOnTop">false</item>
    </style>

    <style name="List.Expand">
        <item name="android:childDivider">@null</item>
        <item name="android:childIndicator">@null</item>
        <item name="android:groupIndicator">@null</item>
    </style>

    <style name="Activity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/backgroundWindow</item>
    </style>

    <style name="Fragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?attr/backgroundFragment</item>
    </style>

    <style name="Fragment.Dialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/backgroundWindow</item>
    </style>

    <style name="Tips">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/backgroundFragment</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/backgroundTopBar</item>
    </style>

    <style name="TitleBar.Dialog">
        <item name="android:background">?attr/backgroundTopBar</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?textColorDefault</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.Spinner">
        <item name="android:textColor">?attr/textColorDefault</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">?attr/textColorTopBarTitle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.SubTitle">
        <item name="android:textColor">?attr/textColorDefault</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:singleLine">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/textColorDefault</item>
        <item name="android:textCursorDrawable">?attr/textColorDefault</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/lt_line_input</item>
    </style>

    <style name="EditText.Content">
        <item name="android:background">@drawable/box</item>
        <item name="android:singleLine">false</item>
        <item name="android:minLines">4</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="EditText.Number">
        <item name="android:inputType">phone</item>
        <item name="android:singleLine">false</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Fragment.Grid">
        <item name="android:horizontalSpacing">10dp</item>
        <item name="android:verticalSpacing">5dp</item>
        <item name="android:numColumns">4</item>
        <item name="android:scrollbars">none</item>
        <item name="android:fadingEdge">none</item>
    </style>

    <style name="Fragment.Grid.Home">
        <item name="android:paddingTop">30dp</item>
        <item name="android:numColumns">3</item>
        <item name="android:verticalSpacing">25dp</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>